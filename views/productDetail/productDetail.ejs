<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>MTheme</title>
    <link rel="icon" type="image/x-icon" href="<%= faviconPath %>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" type="text/css" href="../../css/productDetailStyle.css">
    <link rel="stylesheet" type="text/css" href="../../css/headerStyle.css">
    <link rel="stylesheet" type="text/css" href="../../css/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="../../js/script.js"></script>
</head>
<body>
    <div class="productDetailPage">

        <div class="productDetailHeader" id="productDetailHeader">
            <div class="productDetailCover">
                <div class="swiper-wrapper">
                    <% for( let i=0; i < productData.image.length; i++ ) { %>
                        <div class="swiper-slide">
                            <img src="../<%= productData.image[i] %>" alt="<%= productData.name %>">
                        </div>
                        <% } %>
                </div>
                <div class="swiper-pagination"></div>
            </div>
            <div class="productDetailData">
                <div>
                    <div class="productDetailTitle">
                        <h1>
                            <%= productData.name %>
                        </h1>
                        <p>
                            <%= productData.author %>
                        </p>
                    </div>
                    <p>
                        <%= productData.desc %>
                    </p>
                </div>
                <strong>$<%= productData.price %></strong>
            </div>
        </div>
        <div class="mobileProductDetailData">
            <div>
                <div class="productDetailTitle">
                    <h1>
                        <%= productData.name %>
                    </h1>
                    <p>
                        <%= productData.author %>
                    </p>
                </div>
                <p>
                    <%= productData.desc %>
                </p>
            </div>
            <strong>$<%= productData.price %></strong>
        </div>
        <div id="productDetailMenu" class="productDetailMenu">
            <ul>
                <li onclick="scrollToSection('productDetailHeader')" id="productSelect">Product</li>
                <li onclick="scrollToSection('productDetailComment')" id="productCommentSelect">Comment</li>
                <li onclick="scrollToSection('productDetailContent')" id="productDetailSelect">Detail</li>
            </ul>
        </div>
        <div id="productDetailComment" class="productDetailContent">
            <%- include('productComment') %>
        </div>
        <div id="productDetailContent" class="productDetailContent">
            <%- include('productArticle') %>
        </div>
    </div>
    
    <!-- Initialize Swiper -->
    <script>
        const swiper3 = new Swiper(".productDetailCover", {
            loop: true,
            grabCursor: true,
            effect: "creative",
            creativeEffect: {
                prev: {
                    translate: ["-20%", 0, -1],
                },
                next: {
                    translate: ["100%", 0, 0],
                },
            },
            pagination: {
                el: ".swiper-pagination",
            }
        });
    </script>
</body>
</html>