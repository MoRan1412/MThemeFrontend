<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>MTheme</title>
    <link rel="icon" type="image/x-icon" href="<%= faviconPath %>">
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <link rel="stylesheet" type="text/css" href="./css/personalCenterStyle.css">
    <link rel="stylesheet" type="text/css" href="./css/manageStyle.css">
    <link rel="stylesheet" type="text/css" href="./css/headerStyle.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="./js/script.js"></script>
</head>
<body>
    <!--  -->
    <%- include('personalCenter/header') %>
    <div class="personalCenterPage">
        <% if ( title=="Personal Center" ) { %>
            <%- include('personalCenter/personalCenter') %>
        <% } else if ( title=="Personal Information" ) { %>
            <%- include('personalCenter/feature/profile') %>
        <% } else if ( title=="Change Username" ) { %>
            <%- include('personalCenter/feature/profile/usernameChange') %>

        <!-- Admin -->
        <% } else if ( title=="User Manage" || title=="Product Manage" ||
            title=="Comment Manage" ) { %>
            <%- include('personalCenter/admin/management') %>
        <% } %>
    </div>

    <% if ( title=="Change Username" ) { %>
        <div class="alertWindow" id="alertWindow">
            <div class="alertContainer">
                <h1>Error</h1>
                <p id="errMessage"></p>
                <div class="buttonContainer">
                    <button id="errConfirm" class="windowConfirmBtn">Ok</button>
                </div>
            </div>
        </div>
        <% } %>
</body>
</html>